<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/shape_bind_dialog_background"
    android:orientation="vertical">

    <TextView
        android:text="@string/bind_hind"
        android:gravity="center"
        android:textSize="23dp"
        android:textColor="@android:color/black"
        android:layout_width="360dp"
        android:layout_height="70dp" />

    <ImageView
        android:id="@+id/iv_bind_code"
        android:layout_width="360dp"
        android:layout_height="210dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="23dp"
            android:background="@drawable/selector_bind_dialog_btn_left"
            android:gravity="center"
            android:text="@string/bind_code_stop"
            android:textColor="@android:color/black"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bind_dialog_btn_right"
            android:textSize="23dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="@string/bind_code_close"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>